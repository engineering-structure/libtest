{
  "compileOnSave": true,
  "compilerOptions": {
    "allowArbitraryExtensions": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2016",
    "module": "commonjs",
    "baseUrl": "./",
    "rootDirs": [
      "./src/",
      "./dist/"
    ],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": "./dist/",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true,
    "sourceMap": true,
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@@/*": [
        "./*"
      ]
    }
  }
}